<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
	@Styles.Render("~/Content/css")
	@Styles.Render("~/Content/bootstrap/base")
	@Styles.Render("~/Content/default")

	@Scripts.Render("~/bundles/bootstrap")
	@Scripts.Render("~/bundles/modernizr")
</head>
<body>
	@Scripts.Render("~/bundles/jquery")
	@RenderSection("scripts", required: false)
	<script>
			// Used when working on layout.
			setTimeout(function () {
			        location.reload();
			}, 2000);
	</script>
	<div id="css_footer_wrap">
			<div id="css_footer_body">
				@HeaderContent()
				@RenderBody()
			</div>
	</div>
	<div id="css_footer_footer" class="diagonal_lines_pattern">

	</div>
</body>
</html>

@helper HeaderContent()
{
<div id="header">
		DERP. DERP. DERP.
</div>
}